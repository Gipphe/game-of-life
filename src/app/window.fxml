<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <Menu mnemonicParsing="false" text="Import from...">
                            <items>
                                <MenuItem mnemonicParsing="false" text="*.RLE" />
                                <MenuItem mnemonicParsing="false" text="URL" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Export as...">
                            <items>
                                <MenuItem mnemonicParsing="false" text="*.RLE" />
                            </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <Menu mnemonicParsing="false" text="Color">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Alive color">
                                    <graphic>
                                        <ColorPicker fx:id="aliveColorPicker" onAction="#setAliveColor">
                                            <opaqueInsets>
                                                <Insets />
                                            </opaqueInsets></ColorPicker>
                                    </graphic>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" text="Dead color">
                                    <graphic>
                                        <ColorPicker fx:id="deadColorPicker" onAction="#setDeadColor" />
                                    </graphic>
                                </MenuItem>
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="About">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox fx:id="BottomHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
                            <children>
                                <Button mnemonicParsing="false" onAction="#nextFrame" text="NextFrame">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Button>
                                <ToggleButton fx:id="startStopButton" mnemonicParsing="false" onAction="#toggleStartStop" text="Start">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ToggleButton>
                                <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetGame" text="Reset">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </HBox>
                        <ComboBox fx:id="comboBox" promptText="Pattern">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </ComboBox>
                    </children>
                    <padding>
                        <Insets right="15.0" />
                    </padding>
                </VBox>
                <VBox alignment="CENTER">
                    <children>
                        <Slider fx:id="tickSlider" blockIncrement="1" max="10" min="0" prefHeight="18.0" prefWidth="298.0" value="5">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Slider>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Speed" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
    <center>
        <Canvas fx:id="canvas" height="250.0" onMouseDragged="#onDrag" onMousePressed="#onClick" onScroll="#scrollEvent" width="600.0" BorderPane.alignment="CENTER">
            <cursor>
                <Cursor fx:constant="CROSSHAIR" />
            </cursor></Canvas>
    </center>
</BorderPane>
